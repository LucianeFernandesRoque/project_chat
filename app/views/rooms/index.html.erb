<%= render 'shared/side_bar' %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-purple-50 mb-5 text-gray-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end  %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4x1">Rooms</h1>
    <%= link_to 'New Room', new_room_path, class:"rounded-lg py-3 px-5 bg-purple-600 text-white block font-medium" %>
  </div>

  <div id="rooms" class="min-w-full">
    <% render @rooms %>
  </div>
</div>
