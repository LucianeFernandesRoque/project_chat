<main class="flex w-full h-screen bg-[#e2e8f0]">
  <%= render 'shared/side_bar' %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-purple-50 mb-5 text-gray-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end  %>

      <div class="flex justify-between items-center">
        <h1 class="font-bold text-4x1">Chat-App</h1>
      </div>

      <%= turbo_frame_tag 'rooms_controller' do %>
        <%= link_to 'New Room', new_room_path, class:"rounded-lg py-3 px-5 bg-purple-600 text-white block font-medium" %>
      <% end %>

      <div id="rooms" class="min-w-full">
        <% render @rooms %>
      </div>
  </div>
</main>
