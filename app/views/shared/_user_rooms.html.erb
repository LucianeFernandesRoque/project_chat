<section class="flex flex-col w-full ">
  <h3 class='text-[#7e22ce] font-bold text-x1 mt-3 text-center mb-2'>My Rooms</h3>
  <div class="flex items-center justify-center mt-2">
    <%= button_to 'Log out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'px-3 py-1 text-white bg-[#7e22ce] rounded font-semibold text-sm' %>
  </div>

<span class="text-[#701a75] text-center font-semibold mt-5"><%= current_user.email %></span>
  <div class="flex flex-col px-5 gap-2 w-full" id="rooms">
    <% current_user.rooms.all.each do |room| %>
      <%= render 'shared/room', room: room %>
    <% end  %>
  </div>
</section>